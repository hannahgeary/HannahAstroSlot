import BaseLayout from "../layouts/BaseLayout.astro";

let title = "Home";

const links = ["Home", "About", "Gallery", "Contact"];

// Create object variable

const navData = [
{
href: "/",
text: "Home",
divider: "|",
},

{
href: "/about",
text: "About",
divider: "|",
},
{
href: "/gallery",
text: "Gallery",
divider: "|",
},
{
href: "/markdown/",
text: "Markdown",
divider: "",
},
];
---


<BaseLayout title = {title}> 

