<nav>
<ul>
{
navData.map((item) => (
<>
<li>
<a href={item.href}>{item.text}</a>
</li>
<span class="divider"> {item.divider} </span>
</>
))
}
</ul>
</nav>

</BaseLayout>
<style>
    /* Mobile First */
    /* Manuel Chagoyan */
    ul {
    list-style-type: none;
    display: flex;
    flex-direction: column;
    justify-content: center;
    padding: 1rem;
    background-color: white;
    }
    li {
    background-color: none;
    padding: 0 0.5rem;
    }
    span.divider {
    display: none;
    }
    
    /* Tablet to Desktop */
    @media screen and (min-width: 600px) {
    ul {
    flex-direction: row;
    }
    span.divider {
    display: inline;
    }
    }
    </style>